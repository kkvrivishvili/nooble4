# Service Identification
SERVICE_NAME=agent_service  # Will be overridden by each service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO
ENABLE_TELEMETRY=false

# Redis Configuration
