#================================================================================
# APPLICATION ENVIRONMENT
#================================================================================
ENVIRONMENT="development"
LOG_LEVEL="INFO"
SERVICE_VERSION="0.1.0"
ENABLE_TELEMETRY="false"

#================================================================================
# SERVICE PORTS (Host ports)
#================================================================================
AGENT_ORCHESTRATOR_PORT=8001
QUERY_SERVICE_PORT=8000
INGESTION_SERVICE_PORT=8002
AGENT_MANAGEMENT_PORT=8003
CONVERSATION_SERVICE_PORT=8004
AGENT_EXECUTION_PORT=8005
EMBEDDING_SERVICE_PORT=8006

#================================================================================
# SERVICE URLS (Internal Docker network communication)
#================================================================================
AGENT_ORCHESTRATOR_URL="http://agent_orchestrator_service:8001"
QUERY_SERVICE_URL="http://query_service:8000"
INGESTION_SERVICE_URL="http://ingestion_service:8002"
AGENT_MANAGEMENT_URL="http://agent_management_service:8003"
CONVERSATION_SERVICE_URL="http://conversation_service:8004"
AGENT_EXECUTION_URL="http://agent_execution_service:8005"
EMBEDDING_SERVICE_URL="http://embedding_service:8006"

#================================================================================
# REDIS CONFIGURATION
#================================================================================
REDIS_URL="redis://:redis123@redis_database:6379"
REDIS_PASSWORD="redis123"
REDIS_DECODE_RESPONSES="true"
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_SOCKET_KEEPALIVE="true"
REDIS_MAX_CONNECTIONS=10
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_MAX_MEMORY="256mb"

#================================================================================
# QDRANT CONFIGURATION
#================================================================================
QDRANT_URL="http://qdrant_database:6333"
QDRANT_API_KEY=""
QDRANT_ALLOW_RECOVERY_MODE=true

#================================================================================
# POSTGRES CONFIGURATION
#================================================================================
POSTGRES_HOST=postgres_database
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=nooble

# URL completa para los servicios
POSTGRES_URL="postgresql://postgres:postgres123@postgres_database:5432/nooble"

#================================================================================
# KONG CONFIGURATION
#================================================================================
KONG_DATABASE=postgres
KONG_PG_HOST=postgres_database
KONG_PG_PORT=5432
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong123
KONG_PG_DATABASE=kong

# Puertos de Kong
KONG_PROXY_PORT=8000
KONG_PROXY_SSL_PORT=8443
KONG_ADMIN_PORT=8001
KONG_ADMIN_SSL_PORT=8444

# Plugins
KONG_PLUGINS=bundled

#================================================================================
# KONGA CONFIGURATION
#================================================================================
KONGA_PORT=1337
KONGA_ENV=development
KONGA_TOKEN_SECRET=some-secret-token
KONGA_DB_USER=konga
KONGA_DB_PASSWORD=konga123
KONGA_DB_DATABASE=konga
KONGA_DATABASE_URI="postgresql://konga:konga123@postgres_database:5432/konga"

#================================================================================
# KEYCLOAK CONFIGURATION
#================================================================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_DB=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak123
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PORT=8080

#================================================================================
# PGADMIN CONFIGURATION
#================================================================================
PGADMIN_DEFAULT_EMAIL=admin@nooble4.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_PORT=5050

#================================================================================
# API KEYS AND SECRETS
#================================================================================
# OpenAI (para embedding_service)
OPENAI_API_KEY=""
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_TIMEOUT_SECONDS=30
OPENAI_MAX_RETRIES=3

# Groq (REQUERIDO - para query_service)
GROQ_API_KEY="gsk_dummy_key_for_development"
GROQ_BASE_URL="https://api.groq.com/openai/v1"
GROQ_TIMEOUT_SECONDS=30
GROQ_MAX_RETRIES=3

#================================================================================
# SECURITY CONFIGURATION
#================================================================================
JWT_SECRET_KEY="your-256-bit-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES="30"
JWT_REFRESH_TOKEN_EXPIRE_DAYS="7"

#================================================================================
# CORS CONFIGURATION (sin comillas en la lista)
#================================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="Content-Type,Authorization"
CORS_CREDENTIALS="true"

#================================================================================
# WORKER CONFIGURATION
#================================================================================
WORKER_COUNT=5
SERVICE_STARTUP_TIMEOUT=120
HEALTHCHECK_RETRIES=3
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_START_PERIOD=60