# Authentik Environment Variables

# PostgreSQL Configuration
AUTHENTIK_POSTGRESQL_HOST=postgres_database
AUTHENTIK_POSTGRESQL_PORT=5432
AUTHENTIK_POSTGRESQL_NAME=authentik
AUTHENTIK_POSTGRESQL_USER=authentik_user
AUTHENTIK_POSTGRESQL_PASSWORD=authentik_pass
AUTHENTIK_POSTGRESQL_SSLMODE=disable

# Redis Configuration
AUTHENTIK_REDIS_HOST=redis_database
AUTHENTIK_REDIS_PORT=6379
AUTHENTIK_REDIS_DB=0
AUTHENTIK_REDIS_PASSWORD=${REDIS_PASSWORD}

# Server Configuration
AUTHENTIK_SECRET_KEY=${AUTHENTIK_SECRET_KEY:-insecure-secret-key-change-this}
AUTHENTIK_ERROR_REPORTING__ENABLED=false

# Email Configuration (Configure these in production)
AUTHENTIK_EMAIL__HOST=localhost
AUTHENTIK_EMAIL__PORT=25
AUTHENTIK_EMAIL__USERNAME=
AUTHENTIK_EMAIL__PASSWORD=
AUTHENTIK_EMAIL__USE_TLS=false
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__FROM=authentik@nooble.local
AUTHENTIK_EMAIL__TIMEOUT=10

# Web Configuration
AUTHENTIK_SERVER_EXTERNAL_SCHEME=http
AUTHENTIK_SERVER_EXTERNAL_HOSTNAME=auth.nooble.local
AUTHENTIK_LISTEN_HTTP=0.0.0.0:9000
AUTHENTIK_PORT_HTTP=9000
AUTHENTIK_PORT_HTTPS=9443

# Admin User Configuration
AUTHENTIK_BOOTSTRAP_EMAIL=admin@nooble.local
AUTHENTIK_BOOTSTRAP_PASSWORD=ChangeMe123!
AUTHENTIK_BOOTSTRAP_TOKEN=

# Logging
AUTHENTIK_LOG_LEVEL=info
AUTHENTIK_DISABLE_STARTUP_ANALYTICS=true
AUTHENTIK_ERROR_REPORTING_ENABLED=false

# Security
AUTHENTIK_COOKIE_DOMAIN=.nooble.local
AUTHENTIK_AVATARS=initials

# CORS Configuration
AUTHENTIK_CORS_ALLOWED_ORIGINS=*
AUTHENTIK_CORS_ALLOWED_ORIGINS_CSRF=http://localhost:9000,http://localhost:8000,http://localhost:3000,http://localhost:8080
