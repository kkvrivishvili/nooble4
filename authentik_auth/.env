# Authentik Environment Variables

# PostgreSQL Configuration
AUTHENTIK_POSTGRESQL__HOST=postgres_database
AUTHENTIK_POSTGRESQL__PORT=5432
AUTHENTIK_POSTGRESQL__NAME=authentik
AUTHENTIK_POSTGRESQL__USER=authentik_user
AUTHENTIK_POSTGRESQL__PASSWORD=authentik_pass
AUTHENTIK_POSTGRESQL__SSL_MODE=disable

# Redis Configuration
AUTHENTIK_REDIS__HOST=redis_database
AUTHENTIK_REDIS__PORT=6379
AUTHENTIK_REDIS__DB=0
AUTHENTIK_REDIS__PASSWORD=${REDIS_PASSWORD}

# Server Configuration
AUTHENTIK_ERROR_REPORTING__ENABLED=false

# Email Configuration (Configure these in production)
AUTHENTIK_EMAIL__HOST=localhost
AUTHENTIK_EMAIL__PORT=25
AUTHENTIK_EMAIL__USERNAME=
AUTHENTIK_EMAIL__PASSWORD=
AUTHENTIK_EMAIL__USE_TLS=false
AUTHENTIK_EMAIL__USE_SSL=false
AUTHENTIK_EMAIL__FROM=authentik@nooble.local
AUTHENTIK_EMAIL__TIMEOUT=10

# Web Configuration
AUTHENTIK_SERVER_EXTERNAL__SCHEME=http
AUTHENTIK_SERVER_EXTERNAL__HOSTNAME=auth.nooble.local
AUTHENTIK_LISTEN_HTTP=0.0.0.0:9000
AUTHENTIK_PORT_HTTP=9000
