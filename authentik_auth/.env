# PostgreSQL Configuration
AUTHENTIK_POSTGRESQL__HOST=postgres_database
AUTHENTIK_POSTGRESQL__PORT=5432
AUTHENTIK_POSTGRESQL__NAME=authentik
AUTHENTIK_POSTGRESQL__USER=authentik_user
AUTHENTIK_POSTGRESQL__PASSWORD=authentik_pass
AUTHENTIK_POSTGRESQL__SSLMODE=disable

# Redis Configuration
AUTHENTIK_REDIS__HOST=redis_database
AUTHENTIK_REDIS__PORT=6379
AUTHENTIK_REDIS__DB=0
AUTHENTIK_REDIS__PASSWORD=${REDIS_PASSWORD:-your_secure_redis_password_here}
AUTHENTIK_REDIS__TLS=false
AUTHENTIK_REDIS__TLS_REQS=none

# Server Configuration
AUTH_DOMAIN=auth.nooble.local
AUTHENTIK_SERVER__EXTERNAL_SCHEME=http
AUTHENTIK_SERVER__EXTERNAL_HOSTNAME=auth.nooble.local
AUTHENTIK_LISTEN__HTTP=0.0.0.0:9000
AUTHENTIK_PORT_HTTP=9000
AUTHENTIK_PORT_HTTPS=9443

# Security Configuration
AUTHENTIK_SECRET_KEY=insecure-secret-key-change-this-in-production
AUTHENTIK_BOOTSTRAP_EMAIL=admin@nooble.local
AUTHENTIK_BOOTSTRAP_PASSWORD=nooble123
AUTHENTIK_BOOTSTRAP_TOKEN=

# Features
AUTHENTIK_LOG_LEVEL=debug
AUTHENTIK_ERROR_REPORTING_ENABLED=false
AUTHENTIK_EMAIL_ENABLED=false
AUTHENTIK_DISABLE_STARTUP_ANALYTICS=true
